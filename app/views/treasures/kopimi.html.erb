<div class="dark_card">
  <%= text_field_tag :kopi, @kopi, placeholder: "Kopi sacred text from here...", id: :kopi_field %>
  <%= link_to "kopi", kopi_path, remote: true, class: :white_link %>
  
  
  <%= text_field_tag :pasta, @pasta, placeholder: "Paste sacred text here...", id: :pasta_field %>
  
  
  <%= text_field_tag :remix, @remix, placeholder: "Remix sacred text here...", id: :remix_field %>
  <%= link_to "remix", remix_path, remote: true, class: :white_link %>
  
  <%= form_tag new_kopi_share, method: :get do |f| %>
	  <table id="new_kopi_share_form_table">
		  <tr>
			  <td>
				  <%= text_field_tag :kopi_share, @kopi_share, placeholder: "Share your sacred kopi pasta remix text here..." %>
			  </td>
			  <td>
			    <button type="submit" name="commit">
			      <i class="fa fa-write"></i>
			    </button>
			  </td>
		  </tr>
	  </table>
  <% end %>
</div>
