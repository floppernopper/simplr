<% param_id = (item.class.to_s.downcase + "_id").to_sym %>
<% link_id = "whoa_#{item.class.to_s.downcase}_link_#{item.id}" %>
<% link_class = ((defined?(bottom_left) and bottom_left) ? :bottom_left_link : :standard_post_link) %>

<% unless already_whoad? item %>
  <%= link_to "Whoa#{(' ' + item.whoas.size.to_s) unless item.whoas.size.zero?}", like_path(param_id => item.id, whoa: true),
    method: :post, remote: true, class: link_class, id: link_id %>
<% else %>
  <%= link_to "Unwhoa #{item.whoas.size.to_s}", like_path(param_id => item.id, whoa: true),
    method: :delete, remote: true, class: link_class, id: link_id %>
<% end %>
