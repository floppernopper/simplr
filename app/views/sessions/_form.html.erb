<% unless current_user %>
  <div class="card">
	  <p id="sign_up_label">Log in</p>
	
	  <%= link_to "Sign up", new_user_path, id: :already_signed_up %>
	
	  <%= form_tag sessions_path do %>
		  <%= text_field_tag :login, nil, placeholder: "Username or Email" %>
		
		  <%= password_field_tag :password, nil, placeholder: "Password" %>
		
      <button type="submit" name="commit">
        <b>Sign up <i class="fa fa-pencil"></i></b>
      </button>
		
		  <div id="remember_me_check_box">
			  Remember me <%= check_box_tag :remember_me, 1, params[:remember_me] %>
		  </div>
	  <% end %>
	</div>
<% end %>
