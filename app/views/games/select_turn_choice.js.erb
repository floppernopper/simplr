var turn_choice = $("#turn_choice_<%= @turn_choice %>");
var turn_choice_dropdown = $("#turn_choice_dropdown_<%= @turn_choice %>");

turn_choice.css("background", "rgb(255,105,97)");

var w = 0;
var increase_height = setInterval(function() {

  turn_choice_dropdown.css("height", w + "px");
  w += 1;
  
  // exits from interval loop once expanded
  if (w >= 50) {
    turn_choice_dropdown.prepend("<%=j render 'games/choice_confirm', turn_choice: @turn_choice %>");

    $("#confirm_choice_<%= @turn_choice %>").fadeIn();
    
    clearInterval(increase_height);
  }
}, 10);

