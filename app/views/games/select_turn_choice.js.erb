$(".turn_choice").each(function() {
  if ($(this).attr('id') == "turn_choice_<%= @turn_choice %>") {
    $(this).css("color", "rgb(255,105,97)");
  } else {
    $(this).css("color", "rgb(175,175,175)");
  }
});

$(".turn_choice_dropdown").each(function() {
  if ($(this).attr('id') == "turn_choice_dropdown_<%= @turn_choice %>") {
    $(this).fadeIn();
    $(this).prepend("<%=j render 'games/choice_confirm', turn_choice: @turn_choice %>");
  } else {
    $(this).fadeOut();
  }
});

$(".choice_confirm_main").each(function() {
  if ($(this).attr('id') == "confirm_choice_<%= @turn_choice %>") {
    $(this).fadeIn();
  } else {
    $(this).remove();
  }
});

