<div id="interface_main">
  <div class="dark_card" id="interface_card" align="center">
    <% if your_turn? and game.all_players_ready? %>
      <div id="your_turn_stuff">
        <div class="turn_choice_prompt">
          <b>What do you want to do?</b>
        </div>
        
        <%= link_to select_turn_choice_path(:attack), remote: true do %>
          <div class="turn_choice" id="turn_choice_attack">
            Attack
          </div>
        <% end %>
        
        <div class="turn_choice_dropdown" id="turn_choice_dropdown_attack" hidden>
        </div>
      </div>
    <% else %>
      <p>
        Waiting for other player(s)...
      </p>
      
      <% if in_dev? %>
        <% if current_user.eql? User.first %>
          <%= link_to "h a c k other player", hijack_path(User.second.unique_token), class: :white_link %>
        <% else %>
          <%= link_to "h a c k other player", hijack_path(User.first.unique_token), class: :white_link %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="dark_card" id="interface_stats_card" align="center">
    <p>
      You have <%= current_user._class.health.to_i %> health
    </p>
    
    <% for player in game.other_players current_user %>
      <p>
        <%= player.name %>'s has <%= player._class.health.to_i %> health
      </p>
    <% end %>
  </div>
</div>

<div id="interface_anchor"></div>
