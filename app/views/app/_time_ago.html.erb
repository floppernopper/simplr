<% t = (defined?(time) ? time : item.created_at) %>

<% _time_ago = time_ago(time_ago_in_words(t)) %>

<% link_class = item.is_a?(Post) ? :standard_post_link : :top_right_link %>

<% link_class = position if defined?(position) %>

<% _time_ago = time_label + _time_ago if defined?(time_label) %>

<!-- Accounts for anrcho groups and uses token link instead -->
<%= link_to (anrcho? and item.is_a?(Group) ? show_group_path(item.unique_token) : item), class: link_class do %>
  <strong style="<%= item.is_a?(Message) ? 'color:white;' : '' %>"><%= _time_ago %></strong>
<% end %>
