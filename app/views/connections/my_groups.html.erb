<% @groups = my_groups.reverse %>

<%= render "groups/form" %>

<% @groups.each do |group| %>
  <%= render "groups/card", group: group %>
<% end %>

<% if @groups.empty? %>
  <div class="card">
    <p align="center">
      You aren't in any groups yet. <%= link_to "Click here",
        search_path(query: "groups") %> to search for groups to join.
    </p>
  </div>
<% end %>
