<div class="kristin_snek_card" id="kristin_snek_card" align="center">
  <div class="art_border_vert art_vert_top">
    <div class="art_border_vert_inner vert_inner_top" id="inner_top"></div>
  </div>

  <div class="art_border_right">
    <div class="art_border_side_inner" id="inner_right"></div>
  </div>

  <div class="art_middle" align="center">
    <p class="surreal_txt outrun_txt">
      kristin's snek cardâ„¢
    </p>
  </div>

  <div class="art_border_left" align="center">
    <div class="art_border_side_inner" id="inner_left"></div>
  </div>

  <div class="art_border_vert" align="center">
    <div class="art_border_vert_inner" id="inner_bottom"></div>
  </div>
</div>

<script>
  var snek_card = $("#kristin_snek_card");
  var vert_inner = $("#inner_bottom");
  var inner_sides = $(".art_border_side_inner");
  var inner_top = $("#inner_top");

  snek_card.click(function() {
    vert_inner.toggleClass('vert_inner_expand');
    setTimeout(expand_sides, 1000);
    setTimeout(shrink_top, 2000);
    window.navigator.vibrate(1);
  });

  function expand_sides() {
    inner_sides.toggleClass('side_inner_expand');
  }

  function shrink_top() {
    inner_top.toggleClass('vert_inner_shrink');
  }
</script>

<div class="art_card surreal_card" align="center">
  <%= link_to paper_path do %>
    <p class="surreal_txt">
      surreal
    </p>
  <% end %>
</div>

<div class="art_card" align="center" style="background:pink;">
  <div class="color_palette">
    <% for color in color_palette_2.values %>
      <div class="palette_color"
        style="background:<%= color %>;width:<%= 100.0 / color_palette_2.size.to_f %>%;"></div>
    <% end %>
  </div>
</div>

<div class="art_card" align="center">
  <div class="color_palette">
    <%  i=0; for color in color_palette.values %>
      <%= link_to (i==4 ? love_path \
        : (i==0 ? my_favorite_color_path \
        : (i==2 ? void_path \
        : (i==6 ? vaporwave_path \
        : 'javascript:;')))) do %>
      <div class="palette_color"
        style="background:<%= color %>;width:<%= 100.0 / color_palette.size.to_f %>%;"></div>
      <% end; i+=1 %>
    <% end %>
  </div>
</div>

