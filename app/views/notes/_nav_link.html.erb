<% if currently_unseen_notes.present? %>
  <%= link_to '<i class="fa fa-bell fa-lg"></i>'.html_safe, notes_path, id: :notes_nav_link, class: :notes_nav_link,
    title: "Unseen notifications: #{currently_unseen_notes.size}" %>
  <script>
    <%= render "app/fader.js", target: "notes_nav_link", target_id: "" %>
  </script>
<% end %>

<% if current_user and current_user.inbox_unseen.size > 1 and Rails.env.development? %>
  <%= link_to '<i class="fa fa-envelope fa-lg"></i>'.html_safe, inbox_path, id: :inbox_nav_link,
    class: "#{currently_unseen_notes.present? ? 'inbox_nav_link' : 'notes_nav_link'}",
    title: "Unseen messages: #{current_user.inbox_unseen.size}" %>
  <script>
    <%= render "app/fader.js", target: "inbox_nav_link", target_id: "" %>
  </script>
<% end %>
