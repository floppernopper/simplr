<h2 class="standard_page_header">Notifications <i class="fa fa-bell-o"></i></h2>

<% for note in @notes %>
  <div class="card">
    <p align="center">
      <% case note.action.to_sym %>
      <% when :post_comment %>
        <%= link_to note.message, post_path(note.item_id) %>
      <% end %>
    </p>
  </div>
<% end %>

<% if @notes.empty? %>
  <div class="card">
    <p align="center">
      You have zero notifications.
    </p>
  </div>
<% end %>

<% @notes.update_all seen: true %>
