<% if @down %>
  </br>
  <div class="vertical_spacer"></div>
  <div class="dark_card" id="be_back_shortly_bg" align="center">
    <p>
      <b id="be_back_shortly">Social Maya will be back shortly...</b>
    </p>
  </div>
  <script>
    <%= render "app/fader.js", target: "be_back_shortly", target_id: "", fast: true %>
    <%= render "app/fader.js", target: "be_back_shortly_bg", target_id: "", background: true, fast: true %>
  </script>
<% else %>
  <div class="dark_card" id="post_form_card">
    <%= render "posts/form" %>
    <%= render "app/right_pane" %>
  </div>

  <% if session[:loading_loader_seen] %>
    <%= render "posts/main_feed_container", items: @items, all_items: @all_items %>
  <% else %>
    <%= render "posts/feed_loader" %>
  <% end %>

  <%= audio_tag "effects/magic.wav", id: "zen_sound" %>
  <%= audio_tag "effects/bip.mp3", id: "post_interface_sound" %>
  <%= audio_tag "interface/interface_9.mp3", id: "more_content_sound" %>
<% end %>
