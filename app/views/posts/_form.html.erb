<%= form_for(@post) do |f| %>
  <div align="center">
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
		<table>
			<tr>
				<td>
          <%= f.text_area :body, placeholder: "Post something cool..." %>
				</td>
				<td>
					<%= link_to add_post_image_path, remote: true do %>
						<i class="fa fa-picture-o"></i>
					<% end %>
				</td>
			</tr>
		</table>
		
		<p id="hidden_file_field" hidden><%= f.file_field :image %></p>
    
    <div class="actions">
      <%= f.submit "Post" %>
    </div>
  </div>
<% end %>
