<% parents = (defined?(parents) and parents.present?) ? "groups" : "posts" %>

<div id="feed_container">
	<%= render "#{parents}/feed" %>

  <div align="center">
    <%= loader = case rand(4) when 0; 'load_wheel'; when 1; 'load_circle'; when 2; 'buffer_wheel'; when 3; 'sparkles'; end; \
      render "pages/#{'load_circle'}", items: @items, all_items: @all_items %>
  </div>
</div>
