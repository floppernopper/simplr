<div class="card">
  <div class="card_corner_cut_out"></div>
  <% if post.anon_token.present? %>
    <%= render "users/anon_avatar", token: post.anon_token, position: :token_card_link %>
  <% elsif post.user_id %>
    <%= link_to user_path(post.user), class: :user_avatar_link do %>
      <%= image_tag post.user.image, class: :user_avatar_image %>
    <% end %>
  <% end %>
  
  <div align="center">
    <% if post.image.url %>
      <% unless @post_shown %>
        <%= link_to post do %>
          <%= image_tag post.image, class: :standard_image %>
        <% end %>
      <% else %>
        <%= image_tag post.image, class: :standard_image %>
      <% end %>
    <% end %>
    
	  <p class="standard_body" class="<%= 'justified_body_text' if post.body.size > 150 %>">
      <%= render "app/body", item: post %>
		</p>
  </div>
  
  <%= render "posts/time_ago", post: post %>
  <% if post.user_id.eql? current_user or post.anon_token.eql? anon_token %>
    <%= link_to 'Edit', edit_post_path(post), class: :bottom_right_link %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: :bottom_left_link %>
  <% end %>
</div>


