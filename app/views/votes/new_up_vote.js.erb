// proposals

<% if @up_vote %>  
  var proposal_id = <%= @proposal.id %>;
  
  function new_up_vote_form() {
    var up_vote_link = $("#for_proposal_link_" + proposal_id);
    var down_vote_link = $("#block_proposal_link_" + proposal_id);
    var form_anchor = $("#new_form_anchor_" + proposal_id);
    var form = $("#new_up_vote_form_" + proposal_id);
    
    if (!form.length) {
      form_anchor.after("<%=j render 'votes/new_up_vote' %>");
    }
  }
  
  new_up_vote_form();
<% end %>
