// proposals

<% if @down_vote %>  
  var proposal_id = <%= @proposal.id %>;
  
  function new_down_vote_form() {
    var up_vote_link = $("#up_vote_proposal_" + proposal_id);
    var down_vote_link = $("#down_vote_proposal_" + proposal_id);
    var table_anchor = $("#link_table_anchor_" + proposal_id);
    var form_anchor = $("#new_form_anchor_" + proposal_id);
    var form = $("#new_up_vote_form_" + proposal_id);
    var table = $("#link_table_" + proposal_id);
    
    if (!form.length) {
      up_vote_link.css("font-size", "15px");
      down_vote_link.css("font-size", "17.5px");
      form_anchor.after("<%=j render 'votes/new_down_vote' %>");
    }
  }
  
  new_down_vote_form();
<% end %>
