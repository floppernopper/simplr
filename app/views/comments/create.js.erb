<% if @post %>
  $("#mini_comments_container_<%= @post.id %>").remove();
  $("#post_comments_anchor_<%= @post.id %>").after("<%=j render 'comments/mini_index' %>");
<% elsif @proposal %>
  var item_id = <%= @proposal.id %>;
  var comment_form = $("#new_comment_form_" + item_id);
  var link_table = $("#link_table_" + item_id);
  var table_anchor = $("#link_table_anchor_" + item_id);

  comment_form.remove();
  link_table.remove();
  table_anchor.after("<%=j render 'proposals/link_table', proposal: @proposal %>");
<% end %>
