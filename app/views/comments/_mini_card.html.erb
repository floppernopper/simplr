<div class="mini_comment_card">
  <% if comment.user and comment.user.image %>
    <div class="mini_comment_avatar">
      <%= link_to comment.user do %>
        <%= image_tag comment.user.image, class: :user_avatar_image %>
      <% end %>
    </div>
  <% elsif comment.anon_token %>
    <%= render "users/anon_avatar", token: comment.anon_token, position: :mini_comment_avatar %>
  <% end %>
  <span class="mini_comment_body">
    <%= render "app/body", item: comment %>
  </span>
</div>
