<p style="color: blue;"><%= notice %></p>

<%= render "users/card", user: @user %>

<%= render "posts/form" %>

<% for post in @posts %>
  <%= render "posts/card", post: post %>
<% end %>

<% if @posts.empty? %>
  <div class="card">
    <p align="center">
      You haven't posted anything yet.
    </p>
  </div>
<% end %>


