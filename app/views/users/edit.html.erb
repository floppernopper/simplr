<div class="card">
  <%= form_for @user, url: user_path(@user), method: :patch,
	  :html => { :multipart => true, "data-ajax" => false } do |f| %>
	  <div align="center">
      <%= f.text_field :name, placeholder: "Change your name", class: "standard_text_field" %>
      
	    <p>
		    <%= f.text_area :body, placeholder: "Describe yourself" %>
	    </p>
	    
		  <%= f.file_field :image %>
	    
	    <p>
		    <%= f.submit "Update Profile", class: "standard_form_button" %>
	    </p>
	  </div>
  <% end %>
</div>

<div class="danger_card">
  <div align="center">
    <%= link_to 'Delete (Destroys all of your data)', @user, method: :delete, class: :caution_link,
      title: "Deletes your account and permanently destroys all of your data",
      data: { confirm: "Are you sure you want to delete your account and permanently destroy all of your data?" } %>
  </div>
</div>

<div class="card">
  <div align="center">
    <%= link_to 'Back', @user, title: "Returns you to your profile" %>
  </div>
</div>
