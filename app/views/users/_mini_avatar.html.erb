<% if item.user and item.user.image %>
  <div class="<%= defined?(position) ? position.to_s : 'left_mini_avatar' %>">
    <%= link_to item.user, title: "#{item.user.name}" do %>
      <%= image_tag item.user.image, class: :user_avatar_image %>
    <% end %>
  </div>
<% elsif item.anon_token %>
  <%= render "users/anon_avatar", token: item.anon_token,
    position: (defined?(position) ? position.to_s : 'left_mini_avatar') %>
<% end %>
