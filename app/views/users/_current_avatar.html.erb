<% if current_user and current_user.image.url %>
  <%= link_to user_path(current_user), class: :current_token_link, title: "#{current_user.name}" do %>
    <%= image_tag current_user.image, class: :avatar_container %>
  <% end %>
<% elsif current_user %>
  <%= render "users/anon_avatar", user: current_user, position: :current_token_link %>
<% else %>
  <%= render "users/anon_avatar", token: anon_token, position: :current_token_link %>
<% end %>
