<script>
  $(window).bindWithDelay("scroll", function() {
    $(".standard_post_card").each(function() {
      var from_top = $(this).offset().top;
      if (from_top - $(window).scrollTop() <= 25) {
        // update avatar/user name
        var post_id = $(this).attr('id').split('_')[2];
		    var param = null; param = $.param({ post_id: post_id });
		    $.ajax({
			    type: "GET",
			    url: "/users/update_scrolling_avatar",
			    data: param
		    });
      }
    });
  }, 200);
</script>
