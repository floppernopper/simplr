<% unless current_user %>
  <script>
    <%= render "app/fader.js", target: "invited_message_header", target_id: "" %>
    <%= render "app/fader.js", target: "invited_message_text", target_id: "" %>
    <%= render "app/fader.js", target: "invited_message_link", target_id: "" %>
  </script>
  
  <div class="dark_card" id="invited_message_card">
    <div align="center">
      <h2 id="invited_message_header">ॐ</h2>
      <p class="justified_body_text" id="invited_message_text">
        You've been invited to join ॐ, a minimalist, invite-only social network. Feel free to <%= link_to "browse and post to the site anonymously", root_url, id: :invited_message_link %> from this browser or sign up with a nickname and ensure continued access from other browsers or devices.
      </p>
    </div>
  </div>

  <%= render 'form' %>
<% else %>
  <div class="card">
    <p align="center">
      You've already signed up.
    </p>
  </div>
<% end %>
