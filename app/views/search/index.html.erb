<div class="card">
  <%= render "search/form" %>
</div>

<% unless @results.empty? %>
  <div class="card">
    <div align="center">
      Search found <% i=1; @result_types.each do |type, count| %>
        <%= "#{count} #{type.to_s}#{'s' if count > 1}#{', ' unless i.eql? @result_types.length}" unless count.zero? %>
        <% i+=1 %>
      <% end %>
    </div>
  </div>
<% end %>

<% for item in @results %>
	<% if item.present? and item.class.present? %>
		<% _class = item.class.to_s.downcase %>
		<%= render "#{_class.pluralize}/card", _class.to_sym => item %>
	<% end %>
<% end %>

<% if @results.empty? and @query.present? and not @discover %>
	<div class="card">
		<p align="center">
			There aren't any items associated with this search.
		</p>
	</div>
<% elsif @discover %>
  <script>
    <%= render "app/fader.js", target: 'discover_power_text', target_id: '' %>
  </script>
  <div class="dark_card" align="center">
    <p class="justified_body" id="discover_power_text">
      You've unlocked the Power of Discovery.
      You can now find hidden treasure all over the site.
    </p>
    <%= image_tag "discover_card.jpg", class: :standard_image %>
  </div>
<% end %>


