<% if all_items.present? and all_items.size > page_size %>
  <div align="center" id="buffer_wheel">
	  <script>
		  <%= render "pages/glimmer.js" %>
	  </script>
    
    <div class="avatar_container">
      <%= link_to show_treasure_path(Treasure.random(current_user).unique_token) do %>
        <% 16.times do |num| %>
          <% rgb = random_color %>
          <div class="avatar_pixel buffer_pixel_bit" id="loading_grid_pixel_<%= num %>"
	          style="background:rgb(<%= "#{rgb[0]}, #{rgb[1]}, #{rgb[2]}" %>);"></div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div id="footer_spacing"></div>
